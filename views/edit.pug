extends layout

block content
    h1 Courses

    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name", type="text", placeholder="Enter course name", value=course.name)
            small.text-muted Add Your Course.
        button.btn.btn-primary(type="submit") Save
        a.btn.btn-default(href="/api/courses") Cancel